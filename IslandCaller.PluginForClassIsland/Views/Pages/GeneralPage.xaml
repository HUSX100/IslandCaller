<ui:Page x:Class="IslandCaller.Views.Pages.GeneralPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IslandCaller.Views.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern" 
      xmlns:viewmodel="clr-namespace:IslandCaller.ViewModel.Pages"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodel:GeneralPageViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GeneralPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources/>
                <ui:XamlControlsResources/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.DataContext>
        <viewmodel:GeneralPageViewModel/>
    </Page.DataContext>
    <Grid>
        <ui:SettingsCard 
            VerticalAlignment="Top"
            Header="下课禁用"
            Description="在下课时禁用IslandCaller悬浮窗和Url导航，防止滥用"
            Margin="20,10,20,10">
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.StatusCircleBlock}"/>
            </ui:SettingsCard.HeaderIcon>
            <ui:ToggleSwitch
                IsOn="{Binding IsBreakDisable, Mode=TwoWay}"/>
        </ui:SettingsCard>
    </Grid>
</ui:Page>
