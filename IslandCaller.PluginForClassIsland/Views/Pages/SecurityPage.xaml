<ui:Page x:Class="IslandCaller.Views.Pages.SecurityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:viewmodel="clr-namespace:IslandCaller.ViewModel.Pages"
      xmlns:local="clr-namespace:IslandCaller.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=viewmodel:SecurityPageViewModel}"
      Title="SecurityPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources/>
                <ui:XamlControlsResources/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.DataContext>
        <viewmodel:SecurityPageViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:SettingsExpander 
            VerticalAlignment="Top"
            Header="设置加密（敬请期待）"
            Description="开启设置界面时需要身份验证"
            Margin="20,10,20,5" Grid.Row="0">
            <ui:SettingsExpander.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Lock}"/>
            </ui:SettingsExpander.HeaderIcon>
            <ui:ToggleSwitch
                IsEnabled="False"/>
            <ui:SettingsExpander.Items>
                <ui:SettingsCard 
                    VerticalAlignment="Top"
                    Header="PIN"
                    Description="使用 PIN 解锁">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Dialpad}"/>
                    </ui:SettingsCard.HeaderIcon>
                    <Button
                        x:Name="PIN_Button"
                        Click="PIN_Button_Click"
                        IsEnabled="False"/>
                </ui:SettingsCard>
                <ui:SettingsCard 
                    VerticalAlignment="Top"
                    Header="Windows Hello"
                    Description="使用 Windows Hello 解锁">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.NUIFace}"/>
                    </ui:SettingsCard.HeaderIcon>
                    <Button
                        x:Name="Hello_Button"
                        Click="Hello_Button_Click"/>
                </ui:SettingsCard>
                <ui:SettingsCard 
                    VerticalAlignment="Top"
                    Header="USB 密钥"
                    Description="使用 USB 密钥解锁">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.USB}"/>
                    </ui:SettingsCard.HeaderIcon>
                    <Button
                        x:Name="USB_Button"
                        Click="USB_Button_Click"
                        IsEnabled="False"/>
                </ui:SettingsCard>
                <ui:SettingsCard 
                    VerticalAlignment="Top"
                    Header="身份验证器"
                    Description="使用身份验证器解锁">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.RotationLock}"/>
                    </ui:SettingsCard.HeaderIcon>
                    <Button
                        x:Name="TOTP_Button"
                        Click="TOTP_Button_Click"
                        IsEnabled="False"/>
                </ui:SettingsCard>
            </ui:SettingsExpander.Items>
        </ui:SettingsExpander>
        
    </Grid>
</ui:Page>
