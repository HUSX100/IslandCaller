<ui:Page x:Class="IslandCaller.Views.Pages.HoverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IslandCaller.Views.Pages"
      xmlns:viewmodel="clr-namespace:IslandCaller.ViewModel.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodel:HoverPageViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HoverPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources/>
                <ui:XamlControlsResources/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.DataContext>
        <viewmodel:HoverPageViewModel/>
    </Page.DataContext>
    <Grid>
        <ui:SettingsCard 
        VerticalAlignment="Top"
        Header="点名悬浮窗"
        Description="创建强制置顶的点名悬浮窗"
        Margin="20,10,20,10">
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.NewWindow}"/>
            </ui:SettingsCard.HeaderIcon>
            <ui:ToggleSwitch
                IsOn="{Binding IsHoverOn}"/>
        </ui:SettingsCard>
    </Grid>
</ui:Page>
