<Window x:Class="IslandCaller.Views.Windows.HoverFluent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:IslandCaller.Views.Windows"
        xmlns:models="clr-namespace:IslandCaller.Models"
        xmlns:controls="clr-namespace:IslandCaller.Controls.HoverFluent"
        d:DataContext="{d:DesignInstance Type=models:Settings}"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="#01FFFFFF"
        Topmost="True"
        Title="Hover" Height="70" Width="163"
        SourceInitialized="Window_SourceInitialized" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        AllowDrop="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ui:Button
            x:Name="MainButton"
            Appearance="Primary"
            Margin="10,0,0,0"
            Height="50"
            Width="85"
            Background="#BF8A73D6"
            Foreground="White"
            Click="MainButton_Click" 
            MouseOverBackground="#E5715DC4" 
            PressedBackground="#FF4E3BAB" 
            Focusable="False" 
            PressedForeground="White"
            Padding="4"
            PreviewMouseLeftButtonDown="MainButton_PreviewMouseLeftButtonDown">
            <controls:HoverMainButton x:Name="img" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40"/>
        </ui:Button>
        <ui:Button
            x:Name="Secondary_Button"
            Appearance="Secondary"
            Margin="102,0,0,0"
            Height="50"
            Width="50" 
            Background="#4C808080"
            Padding="4"
            Click="SecondaryButton_Click"
            PreviewMouseLeftButtonDown="SecondaryButton_PreviewMouseLeftButtonDown">
            <controls:HoverSecondaryButton HorizontalAlignment="Center" VerticalAlignment="Center" Height="40"/>
        </ui:Button>
    </Grid>
</Window>
