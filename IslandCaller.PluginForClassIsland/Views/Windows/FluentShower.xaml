<Window x:Class="IslandCaller.Views.Windows.FluentShower"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IslandCaller.Views.Windows" 
        xmlns:local1="clr-namespace:IslandCaller.Controls.FluentShower"
        mc:Ignorable="d"
        Title="FluentShower" 
        Height="120"
        SourceInitialized="Window_SourceInitialized" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        Topmost="True" 
        WindowStartupLocation="CenterScreen" 
        Focusable="False" 
        WindowStyle="None" 
        SizeToContent="Width"
        AllowsTransparency="False"
        Background="#318B62FF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid x:Name="RootGrid"
          HorizontalAlignment="Stretch">
    </Grid>
</Window>
